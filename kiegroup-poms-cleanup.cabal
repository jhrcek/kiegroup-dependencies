name: kiegroup-poms-cleanup
version: 0.1.0.0
cabal-version: >=1.10
build-type: Simple
license: BSD3
license-file: LICENSE
maintainer: jhrcek@redhat.com
homepage: https://github.com/jhrcek/kiegroup-poms-cleanup
synopsis: Set of tools to analyze kiegroup project dependencies
category: Development
author: Jan Hrƒçek
extra-source-files:
    ChangeLog.md
    README.md

library
    exposed-modules:
        TGF
    build-depends:
        aeson -any,
        attoparsec -any,
        base -any,
        bytestring -any,
        containers -any,
        foldl -any,
        system-filepath -any,
        text -any,
        turtle -any
    default-language: Haskell2010
    other-extensions: OverloadedStrings
    hs-source-dirs: backend
    ghc-options: -Wall
